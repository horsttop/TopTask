<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="WaitingProgressDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item><!-- 设置弹窗剧中-->
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">@dimen/ps16</item>
        <item name="android:background">@drawable/shp_waiting_progress_dialog</item>
    </style>
    <!---->
    <style name="dark_primary_txt">
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="dark_secondary_txt">
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.54</item>
    </style>

    <style name="dark_disabled_txt">
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.38</item>
    </style>

    <style name="dark_dividers">
        <item name="android:background">@color/black</item>
        <item name="android:alpha">0.12</item>
    </style>


    <style name="light_primary_txt">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="light_secondary_txt">

        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">0.7</item>
    </style>

    <style name="light_disabled_txt">
        <item name="android:textColor">@color/white</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="light_dividers">
        <item name="android:background">@color/white</item>
        <item name="android:alpha">0.12</item>
    </style>
</resources>
